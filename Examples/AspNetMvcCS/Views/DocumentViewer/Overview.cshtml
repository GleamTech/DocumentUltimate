@using GleamTech.AspNet.UI
@using GleamTech.AspNet.Mvc
@using GleamTech.DocumentUltimate.AspNet.UI
@model DocumentViewer
<!DOCTYPE html>

<html>
<head>
    <title>Overview</title>
    @this.RenderHead(Model)

    @*
        If you prefer, JS can also be rendered at the bottom of the page,
        by first calling RenderHeadWithoutJs in <head>:

        @this.RenderHeadWithoutJs(Model)

        and then calling RenderJs before the closing </body> tag:

        @this.RenderJs(Model)
    *@
</head>
<body style="margin: 20px;">
    @using (Html.BeginForm())
    {
        <text>Change language: </text>@Html.DropDownList("languageSelector", (SelectList)ViewBag.LanguageList, new { onchange = "this.form.submit();" })
        <text>&nbsp;Change theme: </text>@Html.DropDownList("themeSelector", (SelectList)ViewBag.ThemeList, new
                                         {
                                             onchange = "this.form.submit();",
                                             title =  "Note that you can emulate prefers-color-scheme via browser's F12 dev tools to test dark mode which is normally activated according to user's OS preferences."
                                         })
        <br /><br />
        @:@this.RenderBody(ViewBag.ExampleFileSelector as Component)
    }

    @this.RenderBody(Model)
</body>
</html>
